{
  "extends": "airbnb-base",
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "max-len": ["error", { "code": 120 }],
    "no-restricted-syntax": "off",
    "no-promise-executor-return": "off",
    "no-bitwise": "off",
    "indent": [
      "error",
      4,
      { "SwitchCase": 1 }
    ]
  }
}
